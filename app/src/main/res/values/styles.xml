<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
        <item name="colorControlNormal">@color/text_light</item>
    </style>

    <style name="AppTheme.PopupOverlay">
        <item name="colorControlNormal">@color/text_light</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Divider.Seat">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseButton">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minHeight">@dimen/_42sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RippleEffect">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="BaseCardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dialog_corner</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">@bool/cv_PreventCornerOverlap</item>
        <item name="cardUseCompatPadding">@bool/cv_UseCompatPadding</item>
    </style>

    <style name="BaseButton.Blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="BaseCardView.Capsule">
        <item name="cardCornerRadius">@dimen/card_elevation_large</item>
    </style>

    <style name="BaseTextIcon">
        <item name="android:textSize">@dimen/xmicro_text</item>
    </style>

    <style name="botoombar_textchange">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ParentStyleActionBarButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/md_icon_touch_size</item>
        <item name="android:layout_height">@dimen/md_icon_touch_size</item>
    </style>

    <style name="StyleActionBarButtonBack" parent="@style/ParentStyleActionBarButton">
        <item name="android:padding">@dimen/actionbar_button_back_padding</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">@color/cinnabar_e34225</item>
        <item name="srcCompat">@drawable/ic_back</item>
    </style>

    <style name="StyleActionBarTitleButtonSave">
        <item name="android:textSize">@dimen/md_text_body_regular</item>
        <item name="android:textColor">@color/cinnabar_e34225</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/nav_home</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="StyleActionBarTitle">
        <item name="android:textSize">@dimen/actionbar_title_textSize</item>
        <item name="android:textColor">@color/cinnabar_e34225</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/actionbar_title_marginLeft</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="searchEditTextV2">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textColorHint">@color/silver_chalice_aaaaaa</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/selector_custom_border_edittext</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:hint">@string/caption_search_placeholder</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="UikitBorderLine">
        <item name="android:background">@color/alto_d6d6d6</item>
    </style>

    <style name="general_edittext_with_inputlayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dove_gray_636363</item>
        <item name="android:background">@drawable/selector_custom_border_edittext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/fabTextColor</item>
    </style>

</resources>
