<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catdialogLayout"
        android:orientation="vertical"
        android:background="@color/white_solid_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/manage_product_form_category_input_layout_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/catdialogLayout"
            app:layout_constraintRight_toRightOf="@+id/catdialogLayout"
            app:layout_constraintTop_toTopOf="@+id/catdialogLayout">
            <com.cielyang.android.clearableedittext.ClearableEditText
                android:id="@+id/alasan_tolak_txt"
                android:hint="@string/alasan_tolak"
                style="@style/general_edittext_with_inputlayout"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/manage_product_form_category_divider"
            android:background="@drawable/custom_shape_horizontal_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/catdialogLayout"
            app:layout_constraintRight_toRightOf="@+id/catdialogLayout"
            app:layout_constraintTop_toBottomOf="@+id/manage_product_form_category_input_layout_category_name"/>
        <ProgressBar
            android:id="@+id/manage_product_form_category_progressbar"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/catdialogLayout"
            app:layout_constraintLeft_toLeftOf="@+id/catdialogLayout"
            app:layout_constraintRight_toRightOf="@+id/catdialogLayout"
            app:layout_constraintTop_toBottomOf="@+id/manage_product_form_category_divider"/>
        <TextView
            android:textColor="@color/silver_chalice_aaaaaa"
            android:id="@+id/manage_product_form_category_button_cancel"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Batal"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/catdialogLayout"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@+id/catdialogLayout"
            app:layout_constraintRight_toLeftOf="@+id/manage_product_form_category_button_save"
            app:layout_constraintTop_toBottomOf="@+id/manage_product_form_category_divider" />
        <TextView
            android:textColor="@color/cinnabar_e34225d"
            android:id="@+id/manage_product_form_category_button_save"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:text="Simpan"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/catdialogLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/manage_product_form_category_button_cancel"
            app:layout_constraintRight_toRightOf="@+id/catdialogLayout"
            app:layout_constraintTop_toBottomOf="@+id/manage_product_form_category_divider" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
